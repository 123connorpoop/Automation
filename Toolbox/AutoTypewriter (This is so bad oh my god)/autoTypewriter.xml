<dialog title="Auto Typewriter" buttons="accept, cancel">

	<label id="txt_1" value="Enter Top Text" control="iName" />
	<hbox>
	<textbox id="avgCharWidth1" size="24" value="20" width="50" />
	<textbox id="topText" size="24" value="February 13, 12:30PM" />
	</hbox>
	<spacer />
	<label id="txt_2" value="Enter Bottom Text" control="iName" />
	<hbox>
	<textbox id="avgCharWidth2" size="24" value="19" width="50" />
	<textbox id="bottomText" size="24" value="Twilight's Castle - Throne Room" />
	</hbox>
	<spacer />
	
	<radiogroup id="typewriterMode" >
		<radio label="Intro Text" value="introText" />
		<radio label="Evidence Text" value="evidenceText" />
	</radiogroup>
	
	<spacer />
</dialog>